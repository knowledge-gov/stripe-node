{
  "compilerOptions": {
    "outDir": "./esm",
    "target": "es2017",
    "module": "ES2022",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": [ "node", "mocha"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "transpileOnly": true
    }
  },
  "include": ["./src/**/*"]
}
