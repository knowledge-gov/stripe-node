{
  "compilerOptions": {
    "outDir": "./esm",
    "target": "es2017",
    "module": "ES2022",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": [ "node", "mocha"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/stripe.cjs.node.ts", "./src/stripe.cjs.worker.ts"],
}
