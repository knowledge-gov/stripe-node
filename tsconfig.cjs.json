{
  "compilerOptions": {
    "outDir": "./cjs",
    "target": "es2017",
    "module": "commonjs",
		"moduleResolution": "node",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": [ "node", "mocha" ]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/stripe.node.ts", "./src/stripe.worker.ts"]
}
